<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskSettingsHost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- ðŸŸ£ Task Settings Panel at Bottom -->
    <LinearLayout
        android:id="@+id/taskSettingsPanel"
        android:layout_width="411dp"
        android:layout_height="130dp"
        android:layout_marginTop="602dp"
        android:background="@drawable/task_settings_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- â± Time Selector Label -->

        <!-- ðŸ”” Notification Switch -->

        <!-- ðŸ” Repeat Switch -->

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/ic_clock"
            android:drawablePadding="6dp"
            android:focusable="true"
            android:padding="6dp"
            android:text="Pick time"
            android:textColor="#812BE0"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Notify"
            android:textColor="#812BE0"
            android:textSize="12sp"
            android:thumbTint="#812BE0"
            android:trackTint="#D2BAF7" />

        <Switch
            android:id="@+id/repeatSwitch"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:textColor="#812BE0"
            android:textSize="12sp"
            android:thumbTint="#812BE0"
            android:trackTint="#D2BAF7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>